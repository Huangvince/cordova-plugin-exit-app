<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-exitapp" version="1.0.0" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>cordova-plugin-exitapp</name>
    <js-module name="exitAppPlugin" src="www/exitAppPlugin.js">
        <clobbers target="cordova.plugins.exitAppPlugin" />
    </js-module>
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="exitapp" >
                <param name="android-package" value="org.apache.cordova.exitapp.ExitApp"/>
                <param name="onload" value="true" />
            </feature>
        </config-file>

        <source-file src="src/android/ExitApp.java" target-dir="src/org/apache/cordova/exitapp" />
    </platform>
</plugin>
